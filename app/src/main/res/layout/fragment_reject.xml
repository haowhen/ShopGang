<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="300dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/account_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:text="Item Name:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewRejectItemName"
        android:paddingLeft="10dp"
        android:text="Name"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:text="Reason:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/editTextRejectReason"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:hint="Reason(Only needed if Reason Reject)"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp" />

    <Button
        android:layout_width="120dip"
        android:layout_height="85dip"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#D91313"
        android:text="Quick Reject"
        android:padding="15dp"
        android:id="@+id/btnQuickReject"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="220dp"
        android:maxLines="2"
        />

    <Button
        android:layout_width="120dip"
        android:layout_height="85dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:background="#ffd0cd20"
        android:text="Reason Reject"
        android:padding="15dp"
        android:id="@+id/btnRejectReason"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="220dp"/>
</RelativeLayout>