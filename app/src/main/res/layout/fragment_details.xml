<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent">
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTitleDetailItemName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Item Name:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewDetailItemName"
        android:layout_marginLeft="30dp"
        android:text="item"
        android:layout_below="@+id/textViewTitleDetailItemName"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textViewDetailItemName"
        android:id="@+id/textViewTitleAddedBy"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Added By:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewAddedBy"
        android:text="Person"
        android:layout_below="@+id/textViewTitleAddedBy"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quantity:"
        android:layout_below="@+id/textViewAddedBy"
        android:id="@+id/textViewTitleQuantity"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewQuantity"
        android:layout_below="@+id/textViewTitleQuantity"
        android:text="Quantity"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price: "
        android:layout_below="@+id/textViewQuantity"
        android:id="@+id/textViewTitlePrice"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitlePrice"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewPrice"
        android:text="Price"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewPrice"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Total Price: "
                android:id="@+id/textViewTitleTotalPrice"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitleTotalPrice"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTotalPrice"
        android:text="Total Price"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Description: "
    android:layout_below="@+id/textViewTotalPrice"
    android:id="@+id/textViewTitleDescription"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textViewTitleDescription"
        android:id="@+id/textTextDescriptionDetails"
        android:text="Description"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/buttonTextColor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@color/rejectBackground"
        android:text="Reject"
        android:padding="15dp"
        android:id="@+id/btnReject"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/btnPurchase"
        android:layout_below="@id/textTextDescriptionDetails"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/buttonTextColor"
        android:layout_below="@+id/textTextDescriptionDetails"
        android:background="@color/purchaseBackground"
        android:layout_marginRight="15dp"
        android:text="Purchase"
        android:padding="15dp"
        android:id="@+id/btnPurchase"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>